 <div class="row">

  <div class="span4">
    <p id="notice"><%= notice %></p>
      
    <p>
      
      <h2><%= @course.name %></h2>
       <% if @course.lessons.any? %>

   <% end %>
   </p>

    <p>
      <b>Subject:</b>
      <%= @course.subject %>
   </p>

    <p>
      <b>Description:</b>
      <%= @course.description %>
   </p>

<h3><%= link_to "+Create New Lesson!", :controller => "lessons", :action => "new", :course_id => @course %></h3>
  <br>



<%= link_to 'Edit Course', edit_course_path(@course) %> |
<%= link_to 'Back to Courses', courses_path %>
  </div>

  <div class="span4">
  <% if @course.lessons.any? %>
   <h2><center>Lessons<center></h2>
     <table class="table table-striped table-bordered table-condensed">



<% @course.lessons.each do |lesson| %> 

    <tr><td><%= link_to lesson.title, lesson_path(lesson) %> /
    <%= lesson.goal %></td></tr>
     <td><%= link_to 'View', lesson %> |
     <%= link_to 'Remove', lesson, :confirm => 'Are you sure>', :method => :delete %></td>
     </tr>
    <% end %>
 
</table>
     <% else %>
     <center><i>No lessons exist for this course</i></center>
     <% end %>
<% if @course.lessons.any? %>
  <%= link_to "Download Course", :controller => "courses", :action => "downloadcourse", :theid => "#{@course.id}" %>
<% end %>
</div>

</div>

